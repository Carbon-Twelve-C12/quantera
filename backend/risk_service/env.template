# Risk Service v2.0.0-alpha Configuration Template
# Copy this file to .env and fill in your values

# Database Configuration (Required)
# PostgreSQL with TimescaleDB connection string
DATABASE_URL=postgresql://postgres:quantera_dev@localhost:5432/quantera_dev

# Redis Cache Configuration (Required)
# Redis connection string for caching and rate limiting
REDIS_URL=redis://localhost:6379

# Ethereum Configuration (Required)
# RPC endpoint - can be local Hardhat, Anvil, or remote (Infura/Alchemy)
ETH_RPC_URL=http://localhost:8545
# ETH_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_API_KEY

# Risk Engine Smart Contract Address (Required)
# Address of the deployed RiskEngine.sol contract
RISK_ENGINE_ADDRESS=0x0000000000000000000000000000000000000000

# Chainlink Price Feed Address (Optional)
# Address of Chainlink price aggregator for ETH/USD or other pairs
# Sepolia ETH/USD: 0x694AA1769357215DE4FAC081bf1f309aDC325306
CHAINLINK_PRICE_FEED=0x0000000000000000000000000000000000000000

# Service Configuration
# Log level: trace, debug, info, warn, error
LOG_LEVEL=info

# HTTP API port (default: 8001)
HTTP_PORT=8001

# WebSocket port for real-time updates (default: 8546)
WS_PORT=8546

# Optional: Additional Configuration
# JWT_SECRET=your-secret-key-here
# CORS_ORIGINS=http://localhost:3000,http://localhost:3001
# MAX_CONNECTIONS=100
# RATE_LIMIT_PER_MINUTE=100
