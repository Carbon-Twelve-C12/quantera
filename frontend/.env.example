# Quantera Frontend Environment Configuration
# Copy this file to .env and fill in the values
# DO NOT commit .env files to version control

# =============================================================================
# REQUIRED - API Configuration
# =============================================================================

# Backend API URL - REQUIRED
# Development: http://localhost:3001
# Production: https://api.quantera.io/v1
REACT_APP_API_URL=http://localhost:3001

# =============================================================================
# REQUIRED - Security Configuration (Production)
# =============================================================================

# Encryption secret for secure local storage - REQUIRED IN PRODUCTION
# Generate with: openssl rand -base64 48
# Minimum 32 characters required
REACT_APP_ENCRYPTION_SECRET=

# =============================================================================
# OPTIONAL - Wallet Configuration
# =============================================================================

# Reown (formerly WalletConnect) Project ID
# Get yours at: https://cloud.reown.com
REACT_APP_WALLETKIT_PROJECT_ID=

# =============================================================================
# OPTIONAL - Monitoring & Error Tracking
# =============================================================================

# Sentry DSN for error tracking
# Get yours at: https://sentry.io
REACT_APP_SENTRY_DSN=

# DataDog Client Token for browser logging
REACT_APP_DATADOG_CLIENT_TOKEN=

# DataDog Application ID
REACT_APP_DATADOG_APPLICATION_ID=

# =============================================================================
# OPTIONAL - Feature Flags
# =============================================================================

# Enable Trade Finance module
REACT_APP_FF_TRADE_FINANCE=true

# Enable Risk Dashboard
REACT_APP_FF_RISK_DASHBOARD=true

# Enable Environmental Assets
REACT_APP_FF_ENVIRONMENTAL_ASSETS=true

# Enable Yield Strategies
REACT_APP_FF_YIELD_STRATEGIES=true

# Enable Liquidity Pools
REACT_APP_FF_LIQUIDITY_POOLS=true

# Enable Smart Accounts
REACT_APP_FF_SMART_ACCOUNTS=true

# Enable Analytics
REACT_APP_FF_ANALYTICS=true

# Enable L2 Bridge
REACT_APP_FF_L2_BRIDGE=true

# Enable Portfolio
REACT_APP_FF_PORTFOLIO=true

# Enable Marketplace
REACT_APP_FF_MARKETPLACE=true

# =============================================================================
# DEVELOPMENT ONLY
# =============================================================================

# Enable mock API responses (development only)
REACT_APP_USE_MOCKS=false

# Enable debug mode (development only)
REACT_APP_DEBUG=false
